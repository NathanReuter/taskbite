{
  "name": "task-bite",
  "version": "0.0.1",
  "description": "TaskBite is a task management application that allows users to organize tasks into lists and boards, similar to Trello",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,json,css,md}'",
    "test": "NODE_ENV=test jest --runInBand",
    "coverage": "NODE_ENV=test jest --coverage --runInBand",
    "generate:migrations": "drizzle-kit generate",
    "migrate": "ts-node src/migrate.ts"
  },
  "keywords": [],
  "author": "Nathan Reuter Godinho",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "drizzle-kit": "^0.22.7",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/luxon": "^3.4.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "mysql2": "^3.10.1",
    "winston": "^3.13.0"
  }
}
